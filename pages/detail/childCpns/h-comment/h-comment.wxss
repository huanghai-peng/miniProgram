/* pages/detail/childCpns/h-comment/h-comment.wxss */
.comment {
  padding: 30rpx 20rpx 40rpx;
  border-bottom: 16rpx solid #eee;
  color: #555;
}
.comment-info {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}
.comment-user {
  margin: 30rpx 0;
}
.comment-user-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  vertical-align: middle;
}
.comment-content {
  font-size: 28rpx;
  text-indent: 2em;
}
.comment-time {
  font-size: 24rpx;
  margin-top: 20rpx;
}
.comment-created {
  margin-right: 10rpx;
}