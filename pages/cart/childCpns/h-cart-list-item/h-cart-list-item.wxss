/* pages/cart/childCpns/h-cart-list-item/h-cart-list-item.wxss */
.cart-item {
  display: flex;
  padding: 20rpx 10rpx;
  border-bottom: 2rpx solid #eee;
}
.tick {
  width: 65rpx;
  height: 200rpx;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-right: 10rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
}
.active {
  background-color: #ff5777;
}
.cart-image {
  width: 180rpx;
  height: 200rpx;
  /* margin-right: 20rpx; */
}
.image-detail {
  width: 150rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.cart-message {
  width: 400rpx;
}
.base {
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cart-title {
  font-weight: bold;
  margin-top: 20rpx;
}
.cart-desc {
  color: #555;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.price {
  display: flex;
  justify-content: space-between;
}
.price-item {
  color: #ff5777;
}
.count {
  color: #555;
}